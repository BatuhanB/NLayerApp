@using System.Globalization
@model List<ProductWithCategoryDto>
@{
	ViewData["Title"] = "Product Index";
}

<table class="table table-striped">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Price</th>
			<th>Stock</th>
			<th>Category</th>
			<th>CreatedDate</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Price</td>
				<td>@item.Stock</td>
				<td>@item.Category?.Name</td>
				<td>@DateTime.Parse(@item.CreatedDate.ToString(CultureInfo.CurrentCulture)).ToString("D")</td>
				<td><a class="btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
				<td><a class="btn btn-warning" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
			</tr>
		}
	</tbody>

</table>