@{
	ViewData["Title"] = "Product Save";
}
@model ProductDto
<div class="container-fluid">
	<div class="row">
		<div class="col-md-8">
			<form asp-action="Save" method="post" asp-controller="Products">
				<div class="form-group">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control"/>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Stock"></label>
					<input asp-for="Stock" class="form-control" />
					<span asp-validation-for="Stock" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Price"></label>
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CategoryId"></label>
					<select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control" va>
						<option value="0" selected>Seçiniz</option>
					</select>
					<span asp-validation-for="CategoryId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input value="Save" type="submit" class="btn btn-warning"/>
				</div>
			</form>
		</div>
	</div>
</div>
